@{
    ViewData["Title"] = "Trang chủ";
}

<div class="container-fluid p-0">
    <!-- Hero Section with Parallax -->
    <div class="hero-section position-relative">
        <div class="hero-overlay"></div>
        <div class="container position-relative">
            <div class="row align-items-center min-vh-75">
                <div class="col-md-6 intro-title">
                    <h1 class="display-4 fw-bold mb-4 text-white animate__animated animate__fadeInLeft">
                        Hệ thống Hồ sơ Pháp lý Số hóa
                    </h1>
                    <p class="lead mb-4 text-white animate__animated animate__fadeInLeft animate__delay-1s">
                        Quản lý hồ sơ pháp lý một cách an toàn, hiệu quả và tiết kiệm thời gian.
                        Tất cả tài liệu của bạn được lưu trữ và quản lý tập trung trên nền tảng số.
                    </p>
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <div class="d-grid gap-2 d-md-flex animate__animated animate__fadeInUp animate__delay-2s">
                            <a asp-controller="Account" asp-action="Register" class="btn btn-light btn-lg px-4 me-md-2 hover-lift">
                                <i class="fas fa-user-plus"></i> Đăng ký ngay
                            </a>
                            <a asp-controller="Account" asp-action="Login" class="btn btn-outline-light btn-lg px-4 hover-lift">
                                <i class="fas fa-sign-in-alt"></i> Đăng nhập
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="d-grid gap-2 d-md-flex animate__animated animate__fadeInUp animate__delay-2s">
                            <a asp-controller="LegalProfile" asp-action="Index" class="btn btn-light btn-lg px-4 hover-lift">
                                <i class="fas fa-folder"></i> Quản lý hồ sơ
                            </a>
                        </div>
                    }
                </div>
                <div class="col-md-6 d-none d-md-block animate__animated animate__fadeInRight animate__delay-1s">
                    <img src="~/images/hero-image.svg" alt="Legal Documents" class="img-fluid floating" />
                </div>
            </div>
        </div>
    </div>

    <!-- Features Section -->
    <div class="container py-5">
        <h2 class="text-center mb-5 section-title">Tính năng nổi bật</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm hover-card">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon bg-primary bg-gradient text-white rounded-circle mb-3">
                            <i class="fas fa-cloud-upload-alt fa-2x"></i>
                        </div>
                        <h3 class="card-title h5">Lưu trữ số hóa</h3>
                        <p class="card-text text-muted">
                            Upload và lưu trữ tài liệu pháp lý dưới dạng số hóa, 
                            hỗ trợ nhiều định dạng file phổ biến.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm hover-card">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon bg-primary bg-gradient text-white rounded-circle mb-3">
                            <i class="fas fa-shield-alt fa-2x"></i>
                        </div>
                        <h3 class="card-title h5">Bảo mật cao</h3>
                        <p class="card-text text-muted">
                            Hệ thống bảo mật đa lớp, mã hóa dữ liệu, 
                            đảm bảo an toàn cho tài liệu pháp lý của bạn.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm hover-card">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon bg-primary bg-gradient text-white rounded-circle mb-3">
                            <i class="fas fa-tasks fa-2x"></i>
                        </div>
                        <h3 class="card-title h5">Quản lý hiệu quả</h3>
                        <p class="card-text text-muted">
                            Theo dõi trạng thái, tìm kiếm nhanh chóng, 
                            quản lý hồ sơ một cách có hệ thống.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- How It Works Section -->
    <div class="bg-light py-5">
        <div class="container">
            <h2 class="text-center mb-5 section-title">Quy trình làm việc</h2>
            <div class="row g-4">
                <div class="col-md-3">
                    <div class="text-center process-step">
                        <div class="step-number bg-primary text-white rounded-circle mb-3">1</div>
                        <h4>Đăng ký tài khoản</h4>
                        <p class="text-muted">Tạo tài khoản để bắt đầu sử dụng hệ thống</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="text-center process-step">
                        <div class="step-number bg-primary text-white rounded-circle mb-3">2</div>
                        <h4>Tạo hồ sơ</h4>
                        <p class="text-muted">Thêm thông tin và tài liệu cho hồ sơ pháp lý</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="text-center process-step">
                        <div class="step-number bg-primary text-white rounded-circle mb-3">3</div>
                        <h4>Quản lý trạng thái</h4>
                        <p class="text-muted">Theo dõi và cập nhật trạng thái hồ sơ</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="text-center process-step">
                        <div class="step-number bg-primary text-white rounded-circle mb-3">4</div>
                        <h4>Truy xuất thông tin</h4>
                        <p class="text-muted">Tìm kiếm và xem thông tin hồ sơ khi cần</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Call to Action -->
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-8 text-center">
                <h2 class="mb-4 section-title">Bắt đầu quản lý hồ sơ pháp lý của bạn ngay hôm nay</h2>
                <p class="lead mb-4 text-muted">
                    Tham gia cùng hàng nghìn người dùng đang sử dụng hệ thống của chúng tôi
                    để quản lý hồ sơ pháp lý một cách hiệu quả.
                </p>
                @if (!User.Identity.IsAuthenticated)
                {
                    <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg px-5 hover-lift">
                        <i class="fas fa-user-plus"></i> Đăng ký miễn phí
                    </a>
                }
                else
                {
                    <a asp-controller="LegalProfile" asp-action="Index" class="btn btn-primary btn-lg px-5 hover-lift">
                        <i class="fas fa-folder"></i> Truy cập hồ sơ
                    </a>
                }
            </div>
        </div>
    </div>
</div>

<style>
    /* Hero Section */
    .hero-section {
        background: linear-gradient(135deg, #1a237e 0%, #0d47a1 100%);
        min-height: 75vh;
        position: relative;
        overflow: hidden;
        border-radius: 24px;
        padding: 3rem 3rem 3rem 3rem;
        margin-top: 2rem;
    }

    .hero-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('/images/pattern.svg') repeat;
        opacity: 0.1;
    }

    /* Animations */
    .floating {
        animation: floating 3s ease-in-out infinite;
    }

    @@keyframes floating {
        0% { transform: translateY(0px); }
        50% { transform: translateY(-20px); }
        100% { transform: translateY(0px); }
    }

    /* Cards and Features */
    .feature-icon {
        width: 80px;
        height: 80px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
        transition: transform 0.3s ease;
    }

    .hover-card {
        transition: all 0.3s ease;
    }

    .hover-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
    }

    .hover-card:hover .feature-icon {
        transform: scale(1.1);
    }

    /* Process Steps */
    .process-step {
        transition: transform 0.3s ease;
    }

    .process-step:hover {
        transform: translateY(-5px);
    }

    .step-number {
        width: 50px;
        height: 50px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
        font-weight: bold;
        margin: 0 auto;
        transition: transform 0.3s ease;
    }

    .process-step:hover .step-number {
        transform: scale(1.1);
    }

    /* Buttons */
    .hover-lift {
        transition: transform 0.2s ease;
    }

    .hover-lift:hover {
        transform: translateY(-2px);
    }

    /* Section Titles */
    .section-title {
        position: relative;
        padding-bottom: 15px;
    }

    .section-title::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 50px;
        height: 3px;
        background: #1a237e;
    }

    /* Responsive Adjustments */
    @@media (max-width: 768px) {
        .hero-section {
            min-height: 60vh;
            padding: 1.2rem;
        }
        .feature-icon {
            width: 60px;
            height: 60px;
        }
        .intro-title {
            padding-left: 0;
        }
    }

    .intro-title {
        padding-left: 100px;
    }
</style>

@section Scripts {
    <script>
        // Add smooth scroll behavior
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth'
                    });
                }
            });
        });

        // Add scroll reveal animation
        window.addEventListener('scroll', function() {
            const elements = document.querySelectorAll('.process-step, .hover-card');
            elements.forEach(element => {
                const position = element.getBoundingClientRect();
                if(position.top < window.innerHeight && position.bottom >= 0) {
                    element.style.opacity = '1';
                    element.style.transform = 'translateY(0)';
                }
            });
        });
    </script>
}
